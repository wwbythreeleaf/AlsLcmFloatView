    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_bright"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FloatInitActivity"
            android:label="@string/title_activity_float_init" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.leaf.alslcmfloatview.DataServer" />
    </application>

</manifest>